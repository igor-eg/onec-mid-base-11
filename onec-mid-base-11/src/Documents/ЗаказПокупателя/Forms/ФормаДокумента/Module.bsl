&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	// СтандартныеПодсистемы.ПодключаемыеКоманды
	ПодключаемыеКоманды.ПриСозданииНаСервере(ЭтотОбъект);
	// Конец СтандартныеПодсистемы.ПодключаемыеКоманды
	
		//++ Доработка Егоров Задание 1 от 16.01.2025 Добавление реквизита Фоормы КонтактноеЛицо
	Если Элементы.Найти("КЛ_КонтактноеЛицо") = Неопределено Тогда
	
		//Добавление поля ввода
		
        ЭлементКЛ_КонтактныеЛица = Элементы.Добавить("КЛ_КонтактноеЛицо", Тип("ПолеФормы"), Элементы.ГруппаШапкаЛево); 
		ЭлементКЛ_КонтактныеЛица.Вид = ВидПоляФормы.ПолеВвода;
		ЭлементКЛ_КонтактныеЛица.ПутьКДанным = "Объект.КЛ_КонтактноеЛицо";

	КонецЕсли;
	
	//-- Доработка Егоров Задание 1 от 16.01.2025 Добавление реквизита Формы КонтактноеЛицо
	
	//++ Доработка Егоров Задание 2 от 16.01.2025 Добавление реквизита Формы КЛ_СогласованнаяСкидка
	Если Элементы.Найти("КЛ_СогласованнаяСкидка") = Неопределено Тогда
		//Добавление поля ввода
		
		ЭлементКЛ_СогласованнаяСкидка = Элементы.Добавить("КЛ_СогласованнаяСкидка", Тип("ПолеФормы"), Элементы.ГруппаШапкаЛево); 
		ЭлементКЛ_СогласованнаяСкидка.Вид = ВидПоляФормы.ПолеВвода;
		ЭлементКЛ_СогласованнаяСкидка.ПутьКДанным = "Объект.КЛ_СогласованнаяСкидка";
		ЭлементКЛ_СогласованнаяСкидка.УстановитьДействие("ПриИзменении","КЛ_СогласованнаяСкидкаПриИзмененииПосле");
	КонецЕсли;
	
	
	Если Элементы.Найти("КнопкаПересчитатьСкидку") = Неопределено Тогда
		//Добавим команду в коллекцию команд 
		КомандаПересчитатьСкидку = Команды.Добавить("ПересчитатьСкидку");
		КомандаПересчитатьСкидку.Заголовок = "Пересчитать Скидку";
		КомандаПересчитатьСкидку.Действие = "КЛ_ПересчитатьСкидку";
		
		//Добавление поля ввода
		
		КнопкаКоманды = Элементы.Добавить("КнопкаПересчитатьСкидку", Тип("КнопкаФормы"), Элементы.ГруппаШапкаЛево); 
		КнопкаКоманды.ИмяКоманды = "ПересчитатьСкидку";
		Элементы.КнопкаПересчитатьСкидку.Картинка = БиблиотекаКартинок.Обновить;
		Элементы.КнопкаПересчитатьСкидку.Отображение = ОтображениеКнопки.КартинкаИТекст;
				
	КонецЕсли;  
	//-- Доработка Егоров Задание 2 от 18.11.2024 Добавление реквизита Формы Кнопка/Команда "Пересчитать скидку"
	
